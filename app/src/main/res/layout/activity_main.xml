<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/text_rua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rua" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/editTextRua"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextRua"
            app:layout_constraintTop_toBottomOf="@+id/rua"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/cidade"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/rua" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/text_cidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cidade"
            app:layout_constraintStart_toStartOf="@+id/rua"
            app:layout_constraintTop_toBottomOf="@+id/editTextRua" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextCidade" android:layout_marginTop="2dp"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextCidade" app:layout_constraintStart_toStartOf="@+id/cidade"
            app:layout_constraintTop_toBottomOf="@+id/cidade" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/cep" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/text_cep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cep"
            app:layout_constraintStart_toStartOf="@+id/rua"
            app:layout_constraintTop_toBottomOf="@+id/editTextCidade" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextCEP" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextCEP"
            app:layout_constraintStart_toStartOf="@+id/cep"
            app:layout_constraintTop_toBottomOf="@+id/cep" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/salvar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="@string/button_gravar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/salvar" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>